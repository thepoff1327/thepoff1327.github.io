    <!-- JavaScript for random title colors -->
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var titles = document.querySelectorAll("#welcome-title, #contact-title");

            // Array of colors (excluding white and black)
            var colors = ["red", "green", "blue", "orange", "purple", "yellow", "cyan", "magenta"];

            // Apply a random color to each title
            titles.forEach(function(title) {
                var randomColor = colors[Math.floor(Math.random() * colors.length)];
                title.style.color = randomColor;
            });
        });
    </script>
