    <!-- JavaScript for random title colors -->
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Randomly select red or green color for titles
            var titles = document.querySelectorAll("h1, h2");
            for (var i = 0; i < titles.length; i++) {
                if (Math.random() < 0.5) {
                    titles[i].style.color = "red";
                } else {
                    titles[i].style.color = "green";
                }
            }
        });
    </script>
