}

/* Make clickable elements white with green border */
a, button {
    color: white;
    border: 2px solid #4CAF50; /* Add green border */
    padding: 10px; /* Add padding */
    text-decoration: none; /* Remove underline from links */
    display: inline-block; /* Make buttons and links inline-block to add padding */
}

a:hover, button:hover {
    background-color: #4CAF50; /* Change background color on hover */
}
